@model InventoryManagement.Areas.Inventory.ViewModels.ProductIndexViewModels
@{
    Layout = null;
}

<section class="content-header">
    <h1>
        Product Index
        <small>preview of products index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Product</a></li>
        <li class="active">products</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Unit</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th>Sales Price</th>
                                <th>Purchase Price</th>
                                <th style="width: 15px">Update</th>
                                <th style="width: 15px">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>@item.Serial</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductCode</td>
                                    <td>@item.UnitName</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.SalesPrice</td>
                                    <td>@item.PurchasePrice</td>
                                    <td><a href="@Url.Action("UpdateProduct","InventoryData",new { id=item.ProductId})"><i class="fa fa-pencil"></i></a></td>
                                    <td><a href="#"><i class="fa fa-trash"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
