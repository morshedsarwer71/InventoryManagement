<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Sales Invoice</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#firstTab">Index</a></li>
                    <li><a data-toggle="tab" href="#secondTab">Add New</a></li>
                </ul>
                <div class="tab-content">
                    <div id="firstTab" class="tab-pane fade in active">@Html.Action("SalesInvoices")</div>
                    <div id="secondTab" class="tab-pane fade in">@Html.Action("AddSalesInvoice")</div>
                </div>
            </div>
        </div>
        <!-- /.box -->
        <!-- /.col -->

    </div>
</section>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            LoadSessionData();
            $('#btnAdd').click(function () {
                var date = $('#txtDate').val();
                var buyerId = $('#txtBuyerID').val();
                var productId = $('#txtProduct').val();
                var price = $('#txtPrice').val();
                var quantity = $('#txtQuantity').val();
                $('#dvLoader').show();
                $.ajax({
                    url: "/InventoryData/AddSessionInvoice",
                    type: "POST",
                    data: JSON.stringify({
                        "Date": date,
                        "BuyerID": buyerId,
                        "ProductID": productId,
                        "UnitPrice": price,
                        "Quantity": quantity
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {   
                        //var table_body = document.getElementById("tBody");
                        var products = data.ResponseSessions;
                        var tr = "";
                        products.forEach(function (product) {
                            tr += '<tr>';
                            tr += '<td>' + product.Serial + '</td>';
                            tr +='<td>' + product.ProductName + '</td>';
                            tr += '<td>' + product.Quantity + '</td>';
                            tr += '<td>' + product.Price + '</td>';
                            tr += '<td>' + product.TotalPrice + '</td>';
                            tr += "<td>" + product.SessionInvoiceId + '</td>';
                            tr += '</tr>';
   
                        });
                        $("#tBody").html(tr);
                        $('#dvLoader').hide();
                        Clear();
                    }
                });

            });
            $('#btnContinue').click(function () {
                var cash = $('#txtCash').val();
                var des = $('#txtDes').val();
                $('#dvLoader').show();
                $.ajax({
                    url: "/InventoryData/AddSalesInvoice",
                    type: "POST",
                    data: JSON.stringify({
                        "txtCash": cash,
                        "Description": des
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function () {
                        $('#dvLoader').hide();
                        CashDesClear();
                        $("#tBody").reload();
                    }
                });

            });
            $('#btnClear').click(function () {
                $('#dvLoader').show();
                var result = confirm("Want to clear current invoice?");
                if (result) {
                    $.ajax({
                        url: "/InventoryData/ClearSession",
                        type: "POST",
                        success: function () {
                            $('#dvLoader').hide();
                            CashDesClear();
                            Clear();
                            LoadSessionData();
                        }
                    });
                }

            });
            $('#txtCash').keyup(function () {
                loadPrice();
            });           

        });
        function Clear() {
            $('#txtProduct').val('');
            $('#txtPrice').val('');
            $('#txtQuantity').val('');
        }
        function CashDesClear() {
            $('#txtCash').val('');
            $('#txtDes').val('');
        }
        function loadPrice() {
            var grandTotal = $('#txtGrandTotal').val();
            var CalCash = $('#txtCash').val();            
            var total = grandTotal - CalCash;
            $('#txtDuePayment').val(total);

        }
        function LoadSessionData()
        {
            $.ajax({
                url: "/InventoryData/SessionInvoices",
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var products = data.ResponseSessions;
                    var tr = "";
                    products.forEach(function (product) {
                        tr += '<tr>';
                        tr += '<td>' + product.Serial + '</td>';
                        tr += '<td>' + product.ProductName + '</td>';
                        tr += '<td>' + product.Quantity + '</td>';
                        tr += '<td>' + product.Price + '</td>';
                        tr += '<td>' + product.TotalPrice + '</td>';
                        tr += "<td>" + product.SessionInvoiceId + '</td>';
                        tr += '</tr>';

                    });
                    $("#tBody").html(tr);
                    $('#dvLoader').hide();
                    Clear();
                }
            });
        }
    </script>

}