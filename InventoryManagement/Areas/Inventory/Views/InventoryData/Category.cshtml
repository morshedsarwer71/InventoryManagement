<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Category Info</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#firstTab">Index</a></li>
                    <li><a data-toggle="tab" href="#secondTab">Add New</a></li>
                </ul>
                <div class="tab-content">
                    <div id="firstTab" class="tab-pane fade in active">@Html.Action("Categories")</div>
                    <div id="secondTab" class="tab-pane fade in">@Html.Action("AddCategory")</div>
                </div>
            </div>
        </div>
        <!-- /.box -->
        <!-- /.col -->

    </div>
</section>
@section Scripts{
    <script>
        $(document).ready(function () {
            //add new buyer
            $('#btnSave').click(function () {
                var name = $('#txtCategoryName').val();
                var description = $('#txtDescription').val();
                $('#dvLoader').show();
                $.ajax({
                    url: "/InventoryData/AddCategory",
                    type: "POST",
                    data: JSON.stringify({
                        "CategoryName": name,
                        "Description": description
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (json) {
        if (json.isRedirect) {
                            window.location.href = json.redirectUrl;
                        }
                        $('#dvLoader').hide();
                        Clear();
                    }
                });

            });
        });
        function Clear() {
            $('#txtCategoryName').val('');
            $('#txtDescription').val('');
        }
    </script>
}