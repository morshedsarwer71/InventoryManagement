@model InventoryManagement.Areas.Inventory.ViewModels.VendorsViewModels
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Add Expense
        <small>adding new expense</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","InventoryData")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    <div class="form-group">
                        <label class="col-form-label">Date</label>
                        <input id="txtDate" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Expense Head</label>
                        <select class="form-control" id="txtExpense">
                            @foreach (var item in Model.ExpenseNames)
                            {
                                <option value="@item.ExpenseNameId">@item.ExpenseHead</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Amount</label>
                        <input id="txtAmount" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button id="btnSave" type="submit" value="submit" class="btn btn-info">SUBMIT</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


<div id="dvLoader" class="LoadingDiv" style="display: none;">
    <center>
        <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
    </center>
</div>