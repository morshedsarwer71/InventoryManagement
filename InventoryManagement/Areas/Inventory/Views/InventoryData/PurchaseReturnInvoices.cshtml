@model InventoryManagement.Areas.Inventory.ViewModels.PurchaseReturnIndexViewModels
@{
    Layout = null;
}

<section class="content-header">
    <h1>
        purchase return Index
        <small>preview of purchase return index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Purchase Invoice</a></li>
        <li class="active"><a href="@Url.Action("PurchaseReturnInvoice","InventoryData")">Purchase Return</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Purchase Return Code</th>
                                <th>Purchase Return Date</th>
                                <th>Supplier Name</th>
                                <th>Total Price</th>
                                <th>Cash</th>
                                <th>Discount</th>
                                <th>Due</th>
                                <th style="width: 15px">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ResponsePurchaseReturns)
                            {
                                <tr>
                                    <td>@item.Serial.</td>
                                    <td>@item.PurchaseReturnCode</td>
                                    <td>@item.PurchaseReturnDate.ToShortDateString()</td>
                                    <td>@item.SupplierName</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.Cash</td>
                                    <td>@item.Discount</td>
                                    <td>@item.Due</td>
                                    <td><a href="@Url.Action("UpdateBuyer","InventoryData",new {id=item.PurchaseReturnCode })"><i class="fa fa-info-circle"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>