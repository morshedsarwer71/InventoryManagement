@model InventoryManagement.Areas.Inventory.ViewModels.BuyerIndexViewModels
@{
    Layout = null;
}

<section class="content-header">
    <h1>
        Buyers Index
        <small>preview of buyers index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Buyer</a></li>
        <li class="active">Buyers</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Mobile Num.</th>
                                <th>Alt Mobile Num.</th>
                                <th>Prev. Balance</th>
                                <th style="width: 15px">Update</th>
                                <th style="width: 15px">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GetResponseBuyers)
                            {
                            <tr>
                                <td>@item.Serial.</td>
                                <td>@item.BuyerName</td>
                                <td>@item.BuyerAddress</td>
                                <td>@item.MobileNumber</td>
                                <td>@item.AlternateMobileNumber</td>
                                <td>@item.BuyerBalance</td>
                                <td><a href="#"><i class="fa fa-pencil"></i></a></td>
                                <td style="color:red"><a href="" onclick="Delete('@item.BuyerID')"><i class="fa fa-trash"></i></a></td>
                            </tr>
                            }
                        </tbody>                        
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>



