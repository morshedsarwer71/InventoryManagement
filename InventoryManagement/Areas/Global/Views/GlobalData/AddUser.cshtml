@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Add Buyer
        <small>adding new buyer information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","InventoryData")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    <div class="form-group">
                        <label class="col-form-label">User Name</label>
                        <input id="txtName" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User Email</label>
                        <input id="txtEmail" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User Password</label>
                        <input id="txtPassword" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button id="btnSave" type="submit" value="submit" class="btn btn-info">SUBMIT</button>
                    </div>

                </div>


            </div>
        </div>

    </div>
</section>


<div id="dvLoader" class="LoadingDiv" style="display: none;">
    <center>
        <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
    </center>
</div>