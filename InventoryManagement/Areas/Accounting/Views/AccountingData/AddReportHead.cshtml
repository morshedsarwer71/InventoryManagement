@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Add Report Head
        <small>adding new report head information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    <div class="form-group">
                        <label class="col-form-label">Report Head Name EN</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" id="rHeadEN">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Report Head Name AR</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" id="rHeadAR">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Report Type</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <select class="form-control" id="reportType">
                                <option value="1">Income Statement</option>
                                <option value="2">Balance Sheet</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="button" id="btnSave" value="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<div id="dvLoader" class="LoadingDiv" style="display: none;">
    <center>
        <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
    </center>
</div>